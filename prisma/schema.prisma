generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  general
  work
  personal
  ideas
  tasks
  shopping
  health
  travel
  education
  entertainment
  reminders
  events
  music
  messages
  passwords
}

model Page {
  id        String   @id @default(ulid()) @db.VarChar(26)
  title     String   @db.VarChar(255)
  slug      String   @unique @db.VarChar(255)
  category  Category
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id        String   @id @default(ulid()) @db.VarChar(26)
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String   @db.VarChar(26)
  title     String   @db.VarChar(255)
  category  Category
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
